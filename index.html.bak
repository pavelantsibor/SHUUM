    <script>
        // Регистрация service worker для PWA
        (function registerSW(){
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', function(){
                    navigator.serviceWorker.register('/multiframe-noisemeter/service-worker.js', { scope: '/multiframe-noisemeter/' }).catch(function(e){
                        console.warn('SW register failed', e);
                    });
                });
            }
        })();

        // Кастомная кнопка установки PWA
        let deferredPrompt = null;
        const installBtn = document.getElementById('installPwaBtn');
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            installBtn.style.display = 'inline-block';
        });
        installBtn.addEventListener('click', async () => {
            if (!deferredPrompt) return;
            installBtn.disabled = true;
            try {
                await deferredPrompt.prompt();
                await deferredPrompt.userChoice;
            } catch(e) {}
            installBtn.style.display = 'none';
            deferredPrompt = null;
            installBtn.disabled = false;
        });
        // JavaScript код остается без изменений
        let audioContext = null;
        let analyser = null;
        let microphone = null;
        let javascriptNode = null;
        let rafId = null;
        let isMeasuring = false;
        let startTimeMs = 0;
        // Энергетическое усреднение для dB
        let sumRms2 = 0;
        let countFrames = 0;
        // FOREVER-усреднение: накопитель мощности и числа кадров по фазам
        let foreverBeforeSumRms2 = 0;
        let foreverBeforeCountFrames = 0;
        let foreverAfterSumRms2 = 0;
        let foreverAfterCountFrames = 0;
        // FOREVER-спектры по фазам (накапливаем линейную мощность амплитуды по бинам)
        let foreverBeforeSpecSum = null; // Float64Array
        let foreverAfterSpecSum = null;  // Float64Array
        let deviceLabel = '';
        
        // Частотная калибровка
        const CALIBRATION_FREQUENCIES = [125, 250, 500, 1000, 2000, 4000, 8000]; // Гц
        // Финальные значения калибровки (утренние измерения, одна и та же петличка)
        let frequencyCalibration = {
            125:  { measured: 97.4, reference: 79.4, offset: -18.0 },
            250:  { measured: 94.7, reference: 86.0, offset: -8.7 },
            500:  { measured: 90.0, reference: 65.0, offset: -25.0 },
            1000: { measured: 88.6, reference: 81.0, offset: -7.6 },
            2000: { measured: 85.7, reference: 81.5, offset: -4.2 },
            4000: { measured: 81.4, reference: 74.0, offset: -7.4 },
            8000: { measured: 78.8, reference: 73.0, offset: -5.8 }
        };
        let isCalibrating = false;
        let calibrationAudioContext = null;
        let calibrationAnalyser = null;
        let calibrationMicrophone = null;
        let calibrationRafId = null;
        let toneOscillator = null;
        let toneGainNode = null;
        let currentToneFreq = null;
        
        const diffElement = document.getElementById('diff');
        const statusElement = document.getElementById('status');
        const toggleBtn = document.getElementById('toggleBtn');
        const resetBtn = document.getElementById('resetBtn');
        const launchBtn = document.getElementById('launchBtn');
        const deviceList = document.getElementById('deviceList');
        const avgElement = document.getElementById('avg');
        const avgBeforeEl = document.getElementById('avgBefore');
        const avgAfterEl = document.getElementById('avgAfter');
        const durationElement = document.getElementById('duration');
        const historyListEl = null;
        const clearHistoryBtn = null;
        const freqCanvas = document.getElementById('freqCanvas');
        
        // Элементы калибровки
        const calibrationBtn = document.getElementById('calibrationBtn');
        const calibrationModal = document.getElementById('calibrationModal');
        const calibrationResetBtn = document.getElementById('calibrationResetBtn');
        const calibrationCloseBtn = document.getElementById('calibrationCloseBtn');
        const referenceLevelInput = document.getElementById('referenceLevel');
        const calibrationFrequencyList = document.getElementById('calibrationFrequencyList');
        const calibrationResults = document.getElementById('calibrationResults');
        const calibrationResultsText = document.getElementById('calibrationResultsText');
        const baseCalibrationApplyBtn = document.getElementById('baseCalibrationApplyBtn');
        const baseCalibrationInput = document.getElementById('baseCalibrationInput');
        const baseCalibrationOffset = document.getElementById('baseCalibrationOffset');
        // STP UI
        let stpEnableAfterEl = null;
        let stpStrengthEl = null;
        let stpStrengthLabelEl = null;
        
        const freqCtx = freqCanvas.getContext ? freqCanvas.getContext('2d') : null;
        let freqGradient = null;
        let hoverX = null;
        let sampleRate = 48000;
        let currentFftSize = 2048;
        // Два этапа измерения: до/после
        let measurementPhase = 'before'; // 'before' | 'after'
        // Флаг принудительного старта с фазы "до" для следующего запуска
        let forcePhaseBeforeOnNextStart = false;
        // Медианное сглаживание спектра по окну из 80 кадров
        const SMOOTH_WINDOW = 80;
        let spectrumBuffer = [];
        let currentSmoothed = null;
        let beforeSmoothed = null;
        let afterSmoothed = null;
        let avgBeforeVal = null;
        let avgAfterVal = null;
        const measurementLimitSec = 10;
        let endTimeMs = 0;
        
        // Генератор белого шума
        let noiseContext = null;
        let noiseSource = null;
        let noiseGain = null;
        let isNoisePlaying = false;

        // Проверка поддержки getUserMedia
        if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
            toggleBtn.disabled = true;
        }
        
        // ====== ЧАСТОТНАЯ КАЛИБРОВКА ======
        
        // Загрузка калибровки из localStorage
        function loadFrequencyCalibration() {
            try {
                const saved = localStorage.getItem('noiseMeterFreqCalibration');
                if (saved !== null) {
                    frequencyCalibration = JSON.parse(saved);
                    console.log('Частотная калибровка загружена:', frequencyCalibration);
                }
            } catch(e) {
                console.error('Ошибка загрузки калибровки:', e);
                frequencyCalibration = {};
            }
            
            // Загрузка базовой калибровки
            try {
                const savedBase = localStorage.getItem('noiseMeterBaseCalibration');
                if (savedBase !== null) {
                    GLOBAL_CALIBRATION_OFFSET = parseFloat(savedBase);
                    console.log('Базовая калибровка загружена:', GLOBAL_CALIBRATION_OFFSET);
                }
            } catch(e) {
                console.error('Ошибка загрузки базовой калибровки:', e);
            }
        }
        
        // Сохранение калибровки в localStorage
        function saveFrequencyCalibration() {
            try {
                localStorage.setItem('noiseMeterFreqCalibration', JSON.stringify(frequencyCalibration));
                console.log('Частотная калибровка сохранена:', frequencyCalibration);
            } catch(e) {
                console.error('Ошибка сохранения калибровки:', e);
            }
        }
        
        // Сохранение базовой калибровки
        function saveBaseCalibration() {
            try {
                localStorage.setItem('noiseMeterBaseCalibration', GLOBAL_CALIBRATION_OFFSET.toString());
                console.log('Базовая калибровка сохранена:', GLOBAL_CALIBRATION_OFFSET);
            } catch(e) {
                console.error('Ошибка сохранения базовой калибровки:', e);
            }
        }
        
        // Создание компактного UI для списка частот
        function createFrequencyUI() {
            calibrationFrequencyList.innerHTML = '';
            
            CALIBRATION_FREQUENCIES.forEach((freq, index) => {
                const item = document.createElement('div');
                item.className = 'frequency-item';
                item.id = `freq-item-${freq}`;
                
                const calibData = frequencyCalibration[freq] || null;
                if (calibData) {
                    item.classList.add('completed');
                }
                
                item.innerHTML = `
                    <div class="frequency-label" onclick="switchToFrequency(${freq})" style="cursor: pointer;">${freq} Гц</div>
                    <div class="frequency-measured" id="measured-${freq}">
                        <small>Наш:</small>
                        <strong id="measured-value-${freq}">--</strong>
                    </div>
                    <div class="frequency-reference">
                        <small>Проф.:</small><br>
                        <input type="number" id="reference-${freq}" 
                               placeholder="94" 
                               step="0.1" 
                               min="0"
                               max="120"
                               value="${calibData ? calibData.reference.toFixed(1) : ''}">
                    </div>
                    <div>
                        <button class="frequency-apply-btn" id="apply-btn-${freq}" onclick="applyCalibration(${freq})">Применить</button>
                    </div>
                    <div class="frequency-offset" id="offset-${freq}">
                        ${calibData ? `<strong>${calibData.offset >= 0 ? '+' : ''}${calibData.offset.toFixed(1)} dB</strong>` : ''}
                    </div>
                `;
                
                calibrationFrequencyList.appendChild(item);
            });
            
            // НЕ запускаем автоматически тон при открытии - пользователь сначала должен откалибровать белый шум
        }
        
        // Автоматический запуск калибровки частоты
        function startFrequencyCalibration(freq) {
            // Останавливаем предыдущую частоту
            if (currentToneFreq) {
                const prevItem = document.getElementById(`freq-item-${currentToneFreq}`);
                if (prevItem) prevItem.classList.remove('active');
            }
            
            stopTone();
            stopCalibrationMeasurement();
            
            // Подсвечиваем текущую частоту
            const item = document.getElementById(`freq-item-${freq}`);
            if (item) item.classList.add('active');
            
            currentToneFreq = freq;
            
            // Запускаем тон
            startTone(freq);
            
            // Запускаем непрерывное измерение
            startContinuousMeasurement(freq);
        }
        
        // Запуск тона на заданной частоте
        function startTone(freq) {
            if (!noiseContext) {
                noiseContext = new (window.AudioContext || window.webkitAudioContext)();
            }
            
            if (noiseContext.state === 'suspended') {
                noiseContext.resume();
            }
            
            toneOscillator = noiseContext.createOscillator();
            toneOscillator.frequency.value = freq;
            toneOscillator.type = 'sine';
            
            toneGainNode = noiseContext.createGain();
            toneGainNode.gain.value = 0.65; // 65% громкости
            
            toneOscillator.connect(toneGainNode);
            toneGainNode.connect(noiseContext.destination);
            
            toneOscillator.start();
        }
        
        // Остановка тона
        function stopTone() {
            if (toneOscillator) {
                try {
                    toneOscillator.stop();
                    toneOscillator.disconnect();
                } catch(e) {}
                toneOscillator = null;
            }
            if (toneGainNode) {
                try {
                    toneGainNode.disconnect();
                } catch(e) {}
                toneGainNode = null;
            }
        }
        
        // Переключение между частотами кликом на строку
        function switchToFrequency(freq) {
            startFrequencyCalibration(freq);
        }
        
        // Непрерывное измерение текущей частоты
        async function startContinuousMeasurement(freq) {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({
                    audio: {
                        echoCancellation: false,
                        noiseSuppression: false,
                        autoGainControl: false
                    }
                });
                
                calibrationAudioContext = new (window.AudioContext || window.webkitAudioContext)();
                calibrationAnalyser = calibrationAudioContext.createAnalyser();
                calibrationAnalyser.fftSize = 8192;
                calibrationAnalyser.smoothingTimeConstant = 0.3;
                calibrationAnalyser.minDecibels = -100;
                calibrationAnalyser.maxDecibels = -20;
                
                calibrationMicrophone = calibrationAudioContext.createMediaStreamSource(stream);
                calibrationMicrophone.connect(calibrationAnalyser);
                
                isCalibrating = true;
                
                // Непрерывное обновление измерений
                let freqSumRms2 = 0;
                let freqCountFrames = 0;
                let lastUpdateTime = Date.now();
                
                const updateMeasurement = () => {
                    if (!isCalibrating) return;
                    
                    const bufferLength = calibrationAnalyser.frequencyBinCount;
                    const freqArray = new Uint8Array(bufferLength);
                    calibrationAnalyser.getByteFrequencyData(freqArray);
                    
                    const sampleRate = calibrationAudioContext.sampleRate;
                    const nyquist = sampleRate / 2;
                    const targetFreq = freq;
                    const bandwidth = targetFreq * 0.2;
                    const minFreq = Math.max(targetFreq - bandwidth, 50);
                    const maxFreq = Math.min(targetFreq + bandwidth, 10000);
                    
                    let sum = 0;
                    let validSamples = 0;
                    
                    for (let i = 0; i < bufferLength; i++) {
                        const f = (i / bufferLength) * nyquist;
                        if (f >= minFreq && f <= maxFreq) {
                            const amplitude = freqArray[i] / 255;
                            sum += amplitude * amplitude;
                            validSamples++;
                        }
                    }
                    
                    const rms = validSamples > 0 ? Math.sqrt(sum / validSamples) : 0;
                    freqSumRms2 += rms * rms;
                    freqCountFrames++;
                    
                    // Обновляем дисплей каждые 200 мс
                    const now = Date.now();
                    if (now - lastUpdateTime > 200) {
                        const meanRms2 = freqSumRms2 / freqCountFrames;
                        const avgDbFs = meanRms2 > 0 ? 10 * Math.log10(meanRms2) : -100;
                        const measuredLevel = Math.min(120, Math.max(0, avgDbFs + 100));
                        
                        const measuredEl = document.getElementById(`measured-value-${freq}`);
                        if (measuredEl) {
                            measuredEl.textContent = measuredLevel.toFixed(1) + ' dB';
                        }
                        
                        lastUpdateTime = now;
                    }
                    
                    calibrationRafId = requestAnimationFrame(updateMeasurement);
                };
                
                updateMeasurement();
                
            } catch(err) {
                console.error('Ошибка измерения:', err);
                alert('Ошибка доступа к микрофону: ' + err.message);
            }
        }
        
        // Применение калибровки после ввода эталонного значения
        function applyCalibration(freq) {
            const measuredEl = document.getElementById(`measured-value-${freq}`);
            const referenceInput = document.getElementById(`reference-${freq}`);
            const offsetEl = document.getElementById(`offset-${freq}`);
            const applyBtn = document.getElementById(`apply-btn-${freq}`);
            
            const measuredText = measuredEl.textContent;
            if (measuredText === '--' || measuredText === '') {
                alert('Дождитесь измерения текущей частоты');
                return;
            }
            
            const measuredValue = parseFloat(measuredText);
            const referenceValue = parseFloat(referenceInput.value);
            
            if (isNaN(referenceValue) || referenceValue < 0 || referenceValue > 120) {
                alert('Введите корректное значение от 0 до 120 дБ');
                referenceInput.focus();
                return;
            }
            
            const offset = referenceValue - measuredValue;
            
            // Сохраняем калибровку
            frequencyCalibration[freq] = {
                measured: measuredValue,
                reference: referenceValue,
                offset: offset
            };
            
            saveFrequencyCalibration();
            
            // Обновляем UI
            offsetEl.innerHTML = `<strong>${offset >= 0 ? '+' : ''}${offset.toFixed(1)} dB</strong>`;
            applyBtn.textContent = '✓ Готово';
            applyBtn.disabled = true;
            
            const item = document.getElementById(`freq-item-${freq}`);
            item.classList.add('completed');
            
            // Переходим к следующей частоте
            const currentIndex = CALIBRATION_FREQUENCIES.indexOf(freq);
            if (currentIndex < CALIBRATION_FREQUENCIES.length - 1) {
                setTimeout(() => {
                    startFrequencyCalibration(CALIBRATION_FREQUENCIES[currentIndex + 1]);
                }, 800);
            } else {
                // Все частоты откалиброваны - показываем сообщение
                setTimeout(() => {
                    alert('Калибровка завершена! Все частоты откалиброваны.\n\nМожете закрыть окно калибровки.');
                }, 500);
            }
        }
        
        // Остановка измерения
        function stopCalibrationMeasurement() {
            isCalibrating = false;
            
            if (calibrationRafId) {
                cancelAnimationFrame(calibrationRafId);
                calibrationRafId = null;
            }
            
            if (calibrationMicrophone) {
                try {
                    calibrationMicrophone.disconnect();
                    calibrationMicrophone = null;
                } catch(e) {}
            }
            
            if (calibrationAudioContext) {
                try {
                    calibrationAudioContext.close();
                    calibrationAudioContext = null;
                } catch(e) {}
            }
            
            calibrationAnalyser = null;
        }
        
        
        // ====== БАЗОВАЯ КАЛИБРОВКА - РУЧНОЙ ВВОД ======
        
        // Применение базовой калибровки
        function applyBaseCalibration() {
            const offsetValue = parseFloat(baseCalibrationInput.value);
            
            if (isNaN(offsetValue) || offsetValue < -50 || offsetValue > 100) {
                alert('Введите корректное значение от -50 до 100 дБ');
                baseCalibrationInput.focus();
                return;
            }
            
            // Применяем новое смещение
            GLOBAL_CALIBRATION_OFFSET = offsetValue;
            saveBaseCalibration();
            
            // Обновляем UI
            baseCalibrationOffset.innerHTML = `Текущее значение: <strong style="color: var(--accent);">${offsetValue >= 0 ? '+' : ''}${offsetValue.toFixed(1)} dB</strong>`;
            
            alert(`Базовая калибровка применена!\nBASE_CALIBRATION_OFFSET: ${offsetValue >= 0 ? '+' : ''}${offsetValue.toFixed(1)} dB`);
        }
        
        // Открытие модального окна калибровки
        function openCalibrationModal() {
            calibrationModal.classList.add('active');
            
            // Обновляем отображение текущего значения
            baseCalibrationInput.value = GLOBAL_CALIBRATION_OFFSET.toFixed(1);
            baseCalibrationOffset.innerHTML = `Текущее значение: <strong style="color: var(--accent);">${GLOBAL_CALIBRATION_OFFSET >= 0 ? '+' : ''}${GLOBAL_CALIBRATION_OFFSET.toFixed(1)} dB</strong>`;
            
            createFrequencyUI();

            // Инициализация STP UI
            stpEnableAfterEl = document.getElementById('stpEnableAfter');
            stpStrengthEl = document.getElementById('stpStrength');
            stpStrengthLabelEl = document.getElementById('stpStrengthLabel');
            // Загрузка сохраненных настроек
            loadStpSettings();
            // Привязка обработчиков
            if (stpEnableAfterEl) {
                stpEnableAfterEl.checked = ENABLE_STP_WEIGHTING_AFTER;
                stpEnableAfterEl.addEventListener('change', () => {
                    ENABLE_STP_WEIGHTING_AFTER = !!stpEnableAfterEl.checked;
                    saveStpSettings();
                });
            }
            if (stpStrengthEl && stpStrengthLabelEl) {
