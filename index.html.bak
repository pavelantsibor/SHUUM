        // ====== ПРИМЕНЕНИЕ ЧАСТОТНОЙ КОРРЕКЦИИ ======
        
        // Интерполяция смещения для произвольной частоты
        function getFrequencyOffset(freq) {
            const freqs = Object.keys(frequencyCalibration).map(Number).sort((a, b) => a - b);
            
            if (freqs.length === 0) {
                return 0; // Нет калибровки
            }
            
            // Если частота меньше минимальной - возвращаем смещение минимальной
            if (freq <= freqs[0]) {
                return frequencyCalibration[freqs[0]].offset;
            }
            
            // Если частота больше максимальной - возвращаем смещение максимальной
            if (freq >= freqs[freqs.length - 1]) {
                return frequencyCalibration[freqs[freqs.length - 1]].offset;
            }
            
            // Находим две ближайшие частоты для линейной интерполяции
            let lowerFreq = freqs[0];
            let upperFreq = freqs[freqs.length - 1];
            
            for (let i = 0; i < freqs.length - 1; i++) {
                if (freq >= freqs[i] && freq <= freqs[i + 1]) {
                    lowerFreq = freqs[i];
                    upperFreq = freqs[i + 1];
                    break;
                }
            }
            
            // Линейная интерполяция
            const lowerOffset = frequencyCalibration[lowerFreq].offset;
            const upperOffset = frequencyCalibration[upperFreq].offset;
            const t = (freq - lowerFreq) / (upperFreq - lowerFreq);
            
            return lowerOffset + t * (upperOffset - lowerOffset);
        }
        
        // A-weighting коррекция по стандарту IEC 61672-1
        function getAWeighting(freq) {
            if (freq <= 0) return -100;
            
            // Формула A-weighting
            const f2 = freq * freq;
            const c1 = 20.6 * 20.6;
            const c2 = 107.7 * 107.7;
            const c3 = 737.9 * 737.9;
            const c4 = 12194.0 * 12194.0;
            
            const numerator = c4 * f2 * f2;
            const denominator = (f2 + c1) * Math.sqrt((f2 + c2) * (f2 + c3)) * (f2 + c4);
            
            if (denominator === 0) return -100;
            
            const aWeight = 20 * Math.log10(numerator / denominator) + 2.0; // +2.0 для нормализации на 1kHz = 0 dB
            
            return aWeight;
        }
        
        // Применение частотной коррекции к спектру (калибровка микрофона)
        function applyFrequencyCorrection(freqArray, sampleRate) {
            if (Object.keys(frequencyCalibration).length === 0) {
                return freqArray; // Нет калибровки - возвращаем как есть
            }
            
            const corrected = new Float32Array(freqArray.length);
            const nyquist = sampleRate / 2;
            
            for (let i = 0; i < freqArray.length; i++) {
                const freq = (i / freqArray.length) * nyquist;
                const offset = getFrequencyOffset(freq);
                
                // Конвертируем: 0-255 -> dB -> применяем offset -> обратно
                const normalized = freqArray[i] / 255;
                if (normalized > 0) {
                    const dB = 20 * Math.log10(normalized);
                    const correctedDB = dB + offset;
                    const correctedNormalized = Math.pow(10, correctedDB / 20);
                    corrected[i] = Math.min(1, Math.max(0, correctedNormalized));
                } else {
                    corrected[i] = 0;
                }
            }
            
            return corrected;
        }
        
        // Применение A-weighting к спектру
        function applyAWeighting(freqArray, sampleRate) {
            const aWeighted = new Float32Array(freqArray.length);
            const nyquist = sampleRate / 2;
            
            for (let i = 0; i < freqArray.length; i++) {
                const freq = (i / freqArray.length) * nyquist;
                const aWeight = getAWeighting(freq);
                
                // Применяем A-weighting в dB
                const normalized = freqArray[i];
                if (normalized > 0) {
                    const dB = 20 * Math.log10(normalized);
                    const aWeightedDB = dB + aWeight;
                    const aWeightedNormalized = Math.pow(10, aWeightedDB / 20);
                    aWeighted[i] = Math.max(0, aWeightedNormalized);
                } else {
                    aWeighted[i] = 0;
                }
            }
            
            return aWeighted;
        }

        // ====== Дополнительное STP-взвешивание для оценки эффективности шумоизоляции ======
        // Усиливает вклад диапазона 2–10 кГц и ослабляет вклад НЧ до 700 Гц
        // По умолчанию применяется ТОЛЬКО к фазе "после"
        let ENABLE_STP_WEIGHTING_AFTER = true;
        let STP_STRENGTH = 1.0; // 0.0..1.5 (0-150%)

        function getStpWeightingDb(freq) {
            // Плавная кусочно-линейная кривая (dB), 0 дБ в средних частотах
            // <200 Гц: -6 дБ; 200–700 Гц: от -6 до -3 дБ; 700–2000 Гц: от -3 до 0 дБ
            // 2–10 кГц: +4 дБ (с плавным нарастанием), >10 кГц: затухание к 0 дБ
            if (freq <= 0) return 0;
            if (freq < 200) return -6;
            if (freq < 700) {
                const t = (freq - 200) / (700 - 200); // 0..1
                return -6 + t * ( -3 - (-6) ); // -6 -> -3
            }
            if (freq < 2000) {
                const t = (freq - 700) / (2000 - 700);
                return -3 + t * (0 - (-3)); // -3 -> 0
            }
            if (freq <= 10000) {
                const t = (freq - 2000) / (10000 - 2000);
                return 0 + t * (4 - 0); // 0 -> +4 дБ
            }
            // Свыше 10 кГц постепенно возвращаемся к 0
            if (freq < 16000) {
                const t = (freq - 10000) / (16000 - 10000);
                return 4 + t * (0 - 4); // +4 -> 0
            }
            return 0;
        }

        function getStpWeightingScaledDb(freq) {
            return getStpWeightingDb(freq) * STP_STRENGTH;
        }

        // ====== 1/3-октавные полосы и правильный расчет LAeq ======
        
        // Глобальный калибровочный оффсет для приведения к SpectraPLUS (базовая калибровка)
        let GLOBAL_CALIBRATION_OFFSET = 39.0;
        
        function getThirdOctaveCenters() {
            // Стандартные центры 1/3 октавы в пределах 100-10000 Гц
            return [
                100, 125, 160, 200, 250, 315, 400, 500,
                630, 800, 1000, 1250, 1600, 2000, 2500,
                3150, 4000, 5000, 6300, 8000, 10000
            ];
        }

        function getBandEdges(centers) {
            // Границы полос: center * 2^(±1/6)
            const factor = Math.pow(2, 1/6);
            return centers.map(c => ({ low: c / factor, high: c * factor }));
        }

        function computeLAeqFrameFromFloatDb(floatDbArray, sampleRate) {
            const nyquist = sampleRate / 2;
            const bins = floatDbArray.length;
            const centers = getThirdOctaveCenters();
            const edges = getBandEdges(centers);

            // Энергия по полосам (в линейной шкале мощности)
            const bandPowers = new Array(centers.length).fill(0);
            let totalValidBins = 0;

            for (let i = 0; i < bins; i++) {
                const freq = (i / bins) * nyquist;
                if (freq < 100 || freq > 10000) continue;

                // dB из AnalyserNode (dBFS)
                let dB = floatDbArray[i];
                if (!isFinite(dB) || dB < -100) continue;

                // Частотная калибровка микрофона
                const micOffset = getFrequencyOffset(freq) || 0;
                dB += micOffset;

                // A-взвешивание
                dB += getAWeighting(freq);

                // Дополнительное STP-взвешивание применяем только для фазы "после"
                if (ENABLE_STP_WEIGHTING_AFTER && measurementPhase === 'after') {
                    dB += getStpWeightingScaledDb(freq);
                }

                // Перевод в линейную мощность с глобальной калибровкой
                const power = Math.pow(10, (dB + GLOBAL_CALIBRATION_OFFSET) / 10);

                // Находим полосу
                for (let b = 0; b < centers.length; b++) {
                    const e = edges[b];
                    if (freq >= e.low && freq < e.high) {
                        bandPowers[b] += power;
                        totalValidBins++;
                        break;
                    }
                }
            }

            // Если нет валидных бинов - возвращаем минимальное значение
            if (totalValidBins === 0) return 0.0000001; // -100 dB

            // Суммируем энергию по всем полосам
            let totalPower = 0;
            for (let b = 0; b < bandPowers.length; b++) {
                totalPower += bandPowers[b];
            }

            // Нормализуем на количество бинов в полосах
            const avgPower = totalPower / totalValidBins;

            return avgPower;
        }

        // Функции для работы с чистым белым шумом
        function createWhiteNoise() {
            // Создаем AudioContext только один раз
            if (!noiseContext) {
                noiseContext = new (window.AudioContext || window.webkitAudioContext)();
            }
            
            // Создаем источник белого шума
            const bufferSize = 2 * noiseContext.sampleRate; // 2 секунды буфера
            const noiseBuffer = noiseContext.createBuffer(1, bufferSize, noiseContext.sampleRate);
            const output = noiseBuffer.getChannelData(0);
            
            // Создаем ЧИСТЫЙ белый шум без примесей
            for (let i = 0; i < bufferSize; i++) {
                // Чистый белый шум - равномерное распределение по всем частотам
                output[i] = Math.random() * 2 - 1;
            }
            
            // Создаем источник и gain node КАЖДЫЙ РАЗ
            noiseSource = noiseContext.createBufferSource();
            noiseSource.buffer = noiseBuffer;
            noiseSource.loop = true; // зацикливаем шум
            
            noiseGain = noiseContext.createGain();
            noiseGain.gain.value = 0; // начинаем с нулевой громкости
            
            // Подключаем напрямую: источник -> gain -> выход
            // Без фильтров - чистый белый шум
            noiseSource.connect(noiseGain);
            noiseGain.connect(noiseContext.destination);
        }

        function startWhiteNoise() {
