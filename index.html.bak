        function processAudio() {
            const bufferLength = analyser.frequencyBinCount;
            const dataArray = new Uint8Array(bufferLength);
            const freqArray = new Uint8Array(bufferLength);

            const updateLevel = () => {
                analyser.getByteTimeDomainData(dataArray);
                analyser.getByteFrequencyData(freqArray); // Для визуализации
                
                // Берем плавающий спектр в дБ из AnalyserNode для расчетов
                const floatDbArray = new Float32Array(bufferLength);
                analyser.getFloatFrequencyData(floatDbArray);

                // Интеграция по 1/3-октавам с A-взвешиванием и накопление для LAeq
                const framePower = computeLAeqFrameFromFloatDb(floatDbArray, sampleRate);

                // Накопление мощности для LAeq (энергетическое усреднение)
                sumRms2 += framePower;
                countFrames += 1;
                // FOREVER-накопление по фазе
                if (measurementPhase === 'before') {
                    foreverBeforeSumRms2 += framePower;
                    foreverBeforeCountFrames += 1;
                } else {
                    foreverAfterSumRms2 += framePower;
                    foreverAfterCountFrames += 1;
                }
                const meanPower = sumRms2 / Math.max(1, countFrames);

                // Перевод в дБ (калибровка уже применена к мощности)
                // Отображаем режим Forever по текущей фазе
                const foreverMeanPowerPhase = (measurementPhase === 'before')
                    ? (foreverBeforeSumRms2 / Math.max(1, foreverBeforeCountFrames))
                    : (foreverAfterSumRms2 / Math.max(1, foreverAfterCountFrames));
                const avgDisplayed = foreverMeanPowerPhase > 0 ? 10 * Math.log10(foreverMeanPowerPhase) + 100 : 0;

                // Энергетическое усреднение и вывод в соответствующую строку (ДО/ПОСЛЕ)
                if (isMeasuring) {
                    // avgDisplayed уже вычислен как LAeq по 1/3-октавам
                    if (measurementPhase === 'before') avgBeforeEl.textContent = `До: ${avgDisplayed.toFixed(1)} dB`;
                    else avgAfterEl.textContent = `После: ${avgDisplayed.toFixed(1)} dB`;
                    const elapsed = Math.floor((Date.now() - startTimeMs) / 1000);
                    const remaining = Math.max(0, measurementLimitSec - elapsed);
                    const prevRemaining = durationElement.getAttribute('data-prev');
                    if (prevRemaining !== String(remaining)) {
                        durationElement.textContent = `${remaining}`;
                        durationElement.setAttribute('data-prev', remaining);
                        // Анимация пульсации
                        durationElement.classList.remove('pulse');
                        void durationElement.offsetWidth; // trigger reflow
                        durationElement.classList.add('pulse');
                        setTimeout(() => {
                            durationElement.classList.remove('pulse');
                        }, 300);
                    }
                    if (Date.now() >= endTimeMs) {
                        stopMeter();
                        return;
                    }
                }

                // Обновляем разницу (ПОСЛЕ - ДО) при второй фазе
                if (measurementPhase === 'after') {
                    const beforeVal = (avgBeforeVal !== null && !isNaN(avgBeforeVal)) ? avgBeforeVal : null;
                    const currentMeanPower = sumRms2 / Math.max(1, countFrames);
                    const currentAvgDisplay = currentMeanPower > 0 ? 10 * Math.log10(currentMeanPower) + 100 : 0;
                    if (beforeVal !== null) {
                        const diffDb = currentAvgDisplay - beforeVal;
                        // Конверсия дБ в мощностное отношение: P2/P1 = 10^(ΔdB/10)
                        const powerRatio = Math.pow(10, diffDb / 10);
                        const percent = (powerRatio - 1) * 100;
                        const sign = percent >= 0 ? '+' : '';
                        diffElement.textContent = `Разница: ${diffDb.toFixed(1)} dB (${sign}${percent.toFixed(0)}%)`;
                    }
                }

                // FOREVER-спектры по фазам (накапливаем линейную мощность по бинам)
                if (isMeasuring) {
                    const bufferLength = freqArray.length;
                    const nyquistLocal = sampleRate / 2;
                    // подготовим сумматоры
                    if (measurementPhase === 'before') {
                        if (!foreverBeforeSpecSum || foreverBeforeSpecSum.length !== bufferLength) {
                            foreverBeforeSpecSum = new Float64Array(bufferLength);
                        }
                        for (let i = 0; i < bufferLength; i++) {
                            // 0..1 амплитуда
                            const n = (freqArray[i] / 255);
                            if (n <= 0) continue;
                            // dB мгновенные по амплитуде
                            let dB = 20 * Math.log10(n);
                            const freq = (i / bufferLength) * nyquistLocal;
                            // A-взвешивание
                            dB += getAWeighting(freq);
                            // обратно в нормализованную амплитуду
                            const nCorr = Math.pow(10, dB / 20);
                            const pCorr = nCorr * nCorr; // линейная мощность
                            foreverBeforeSpecSum[i] += pCorr;
                        }
                    } else {
                        if (!foreverAfterSpecSum || foreverAfterSpecSum.length !== bufferLength) {
                            foreverAfterSpecSum = new Float64Array(bufferLength);
                        }
                        for (let i = 0; i < bufferLength; i++) {
                            const n = (freqArray[i] / 255);
                            if (n <= 0) continue;
                            let dB = 20 * Math.log10(n);
                            const freq = (i / bufferLength) * nyquistLocal;
                            dB += getAWeighting(freq);
                            const nCorr = Math.pow(10, dB / 20);
                            const pCorr = nCorr * nCorr;
                            foreverAfterSpecSum[i] += pCorr;
                        }
                    }
                }
                
                // Применяем визуальный фильтр высоких частот перед отрисовкой
                const visualData = applyVisualHighPassFilter(currentSmoothed || freqArray);
                
                // Рисуем спектр (сглаженный и отфильтрованный)
                drawFrequencyResponse(visualData);

                rafId = requestAnimationFrame(updateLevel);
            };

            updateLevel();
        }

        function stopMeter() {
            if (rafId) {
                cancelAnimationFrame(rafId);
                rafId = null;
            }
            if (microphone) {
                microphone.disconnect();
            }
            if (audioContext) {
                audioContext.close();
                audioContext = null;
            }
            if (navigator.mediaDevices) {
                navigator.mediaDevices.removeEventListener('devicechange', updateDeviceList);
            }
            
            // Останавливаем белый шум
            stopWhiteNoise();
            
            // Определяем следующий шаг для кнопки
            if (measurementPhase === 'before') {
                toggleBtn.textContent = 'Старт';
            } else {
                toggleBtn.textContent = 'Старт';
            }
            toggleBtn.disabled = false;
            toggleBtn.classList.remove('stop');
            deviceList.style.display = 'none';

            // Сбрасываем флаг измерения ДО обработки итогов, чтобы живая линия не рисовалась
            const wasMeasuring = isMeasuring;
            isMeasuring = false;

            // Итог среднего (LAeq по 1/3-октавам) - берём Forever по текущей фазе
            if (wasMeasuring) {
                let meanPower, avg;
                if (measurementPhase === 'before') {
                    meanPower = foreverBeforeCountFrames > 0 ? (foreverBeforeSumRms2 / foreverBeforeCountFrames) : 0;
                    avg = meanPower > 0 ? 10 * Math.log10(meanPower) + 100 : 0;
                    avgBeforeVal = Number(avg.toFixed(1));
                    avgBeforeEl.textContent = `До: ${avgBeforeVal.toFixed(1)} dB`;
                } else {
                    meanPower = foreverAfterCountFrames > 0 ? (foreverAfterSumRms2 / foreverAfterCountFrames) : 0;
                    avg = meanPower > 0 ? 10 * Math.log10(meanPower) + 100 : 0;
                    avgAfterVal = Number(avg.toFixed(1));
                    avgAfterEl.textContent = `После: ${avgAfterVal.toFixed(1)} dB`;
                    if (avgBeforeVal !== null) {
                        const diffDb = avgAfterVal - avgBeforeVal;
                        const powerRatio = Math.pow(10, diffDb / 10);
                        const percent = (powerRatio - 1) * 100;
                        const sign = percent >= 0 ? '+' : '';
                        diffElement.textContent = `Разница: ${diffDb.toFixed(1)} dB (${sign}${percent.toFixed(0)}%)`;
                    }
                }
                
                // Сохраняем Forever-спектр по фазам в Uint8Array для отрисовки
                if (measurementPhase === 'before' && foreverBeforeSpecSum && foreverBeforeCountFrames > 0) {
                    const bins = foreverBeforeSpecSum.length;
                    beforeSmoothed = new Uint8Array(bins);
                    for (let i = 0; i < bins; i++) {
                        const avgPower = foreverBeforeSpecSum[i] / foreverBeforeCountFrames;
                        const n = Math.sqrt(Math.max(0, avgPower));
                        beforeSmoothed[i] = Math.max(0, Math.min(255, Math.round(n * 255)));
                    }
                } else if (measurementPhase === 'after' && foreverAfterSpecSum && foreverAfterCountFrames > 0) {
                    const bins = foreverAfterSpecSum.length;
                    afterSmoothed = new Uint8Array(bins);
                    for (let i = 0; i < bins; i++) {
                        const avgPower = foreverAfterSpecSum[i] / foreverAfterCountFrames;
                        const n = Math.sqrt(Math.max(0, avgPower));
                        afterSmoothed[i] = Math.max(0, Math.min(255, Math.round(n * 255)));
                    }
                }
                
                // Финальная отрисовка с правильным размером bins
                try {
                    const bins = analyser ? analyser.frequencyBinCount : 2048;
                    drawFrequencyResponse(new Uint8Array(bins));
                } catch(e) { console.warn('Не удалось отрисовать финальную АЧХ', e); }
            }

            isMeasuring = false;
            
            // Сразу после установки isMeasuring = false перерисовываем график, чтобы застыли линии
            // Используем небольшую задержку, чтобы canvas успел получить размер после выхода из fullscreen
            setTimeout(() => {
                try {
                    const bins = analyser ? analyser.frequencyBinCount : 2048;
                    drawFrequencyResponse(new Uint8Array(bins));
                    console.log('График перерисован после stopMeter, beforeSmoothed:', beforeSmoothed ? beforeSmoothed.length : 'null', 'afterSmoothed:', afterSmoothed ? afterSmoothed.length : 'null');
                } catch(e) {
                    console.error('Ошибка перерисовки графика:', e);
                }
            }, 150);
            
            // Переключаем фазу и управляем подписями кнопок
            if (measurementPhase === 'before') {
                measurementPhase = 'after';
                toggleBtn.textContent = 'Старт';
                resetBtn.textContent = 'Стоп';
                toggleBtn.style.display = 'inline-block';
            } else {
                // Завершили фазу «после» — предлагаем "Завершить" и подготовим новый цикл
                measurementPhase = 'before';
                toggleBtn.style.display = 'none';
                resetBtn.textContent = 'Завершить';
                // Установим флаг, чтобы следующий "Старт" всегда начинал с ДО
                forcePhaseBeforeOnNextStart = true;
            }
        }

        function hardReset() {
            // Остановить активные процессы
            if (isMeasuring) {
                if (rafId) { cancelAnimationFrame(rafId); rafId = null; }
                try { if (microphone) microphone.disconnect(); } catch(e) {}
                try { if (audioContext) { audioContext.close(); audioContext = null; } } catch(e) {}
                try { navigator.mediaDevices.removeEventListener('devicechange', updateDeviceList); } catch(e) {}
                isMeasuring = false;
            }
            
            // Останавливаем белый шум
            stopWhiteNoise();
            
            // Сброс всех данных
            beforeSmoothed = null;
            afterSmoothed = null;
            spectrumBuffer = [];
            currentSmoothed = null;
            avgBeforeVal = null;
            avgAfterVal = null;
            sumRms2 = 0;
            countFrames = 0;
            startTimeMs = 0;
            endTimeMs = 0;
            measurementPhase = 'before';
            forcePhaseBeforeOnNextStart = true;
            // Сброс UI
            avgBeforeEl.textContent = 'До: -- dB';
            avgAfterEl.textContent = 'После: -- dB';
            diffElement.textContent = 'Разница: -- dB';
            durationElement.textContent = `${measurementLimitSec} секунд`;
            toggleBtn.textContent = 'Старт';
            toggleBtn.classList.remove('stop');
            toggleBtn.disabled = false; // гарантируем, что старт снова активен
            toggleBtn.style.display = 'inline-block'; // показываем кнопку снова
            resetBtn.textContent = 'Стоп';
            // Включаем анимацию пульсации для привлечения внимания
            toggleBtn.classList.add('pulse-attention');
            // Очистка графика
            try {
                const rect = freqCanvas.getBoundingClientRect();
                freqCtx.fillStyle = '#ffffff';
                freqCtx.fillRect(0, 0, rect.width, rect.height);
                drawFrequencyResponse(new Uint8Array(currentFftSize / 2));
            } catch(e) {}
        }

        async function updateDeviceList() {
            try {
                const devices = await navigator.mediaDevices.enumerateDevices();
                const audioInputDevices = devices.filter(device => device.kind === 'audioinput');

                deviceList.innerHTML = '';
                audioInputDevices.forEach(device => {
                    const option = document.createElement('option');
                    option.value = device.deviceId;
                    option.textContent = device.label || `Микрофон ${device.deviceId.substring(0, 5)}`;
                    deviceList.appendChild(option);
                });
            } catch (err) {
                console.error('Ошибка обновления списка устройств:', err);
            }
        }

        // Обработка выбора устройства
        deviceList.addEventListener('change', async () => {
            // Перезапускаем с выбранным устройством
            stopMeter();
            setTimeout(startMeter, 100);
        });

        function renderHistory() {
            historyListEl.innerHTML = '';
            if (!history.length) return;
            history.forEach(item => {
                const li = document.createElement('li');
                const left = document.createElement('span');
                const right = document.createElement('span');
                const dt = new Date(item.ts);
                const mm = String(Math.floor(item.duration / 60)).padStart(2, '0');
                const ss = String(item.duration % 60).padStart(2, '0');
                left.textContent = `${dt.toLocaleDateString()} ${dt.toLocaleTimeString()}${item.device ? ' · ' + item.device : ''}`;
                right.textContent = `${item.avg !== null ? item.avg.toFixed(1) + ' dB' : '-- dB'} · ${mm}:${ss}`;
                li.appendChild(left);
                li.appendChild(right);
                historyListEl.appendChild(li);
            });
        }

        function saveHistory() {
            try { localStorage.setItem('noiseMeterHistory', JSON.stringify(history.slice(0, 100))); } catch(e) {}
        }

        function clearHistory() {
            history = [];
            saveHistory();
            renderHistory();
            clearHistoryBtn.disabled = true;
        }

        // ====== Спектр (АЧХ) ======
        function initFreqCanvas() {
            if (!freqCtx) return;
            const dpr = window.devicePixelRatio || 1;
            const rect = freqCanvas.getBoundingClientRect();
            console.log('Canvas rect:', rect.width, 'x', rect.height);
            console.log('Window size:', window.innerWidth, 'x', window.innerHeight);
            console.log('Fullscreen:', !!document.fullscreenElement);
            freqCanvas.width = Math.floor(rect.width * dpr);
            freqCanvas.height = Math.floor(rect.height * dpr);
            freqCtx.setTransform(1, 0, 0, 1, 0, 0);
            freqCtx.scale(dpr, dpr);
            // Градиент заливки столбцов
            freqGradient = freqCtx.createLinearGradient(0, 0, 0, rect.height);
            freqGradient.addColorStop(0, 'rgba(1,100,79,0.9)');
            freqGradient.addColorStop(1, 'rgba(1,100,79,0.2)');
        }

        // Подсобные: медиана спектров (используется в процессе измерения)
        function medianSpectrum(buffer) {
            if (!buffer.length) return null;
            const len = buffer[0].length;
            const out = new Uint8Array(len);
            for (let i = 0; i < len; i++) {
                const arr = new Array(buffer.length);
                for (let k = 0; k < buffer.length; k++) arr[k] = buffer[k][i];
                arr.sort((a,b) => a-b);
                const mid = Math.floor(arr.length / 2);
                out[i] = arr.length % 2 ? arr[mid] : Math.round((arr[mid-1] + arr[mid]) / 2);
            }
            return out;
        }
        
        // Визуальный фильтр высоких частот для подавления низкочастотного шума на графике
        function applyVisualHighPassFilter(spectrum) {
            if (!spectrum || spectrum.length === 0) return spectrum;
            
            const filtered = new Uint8Array(spectrum.length);
            const nyquist = sampleRate / 2;
            const bins = spectrum.length;
            
            // Параметры плавного фильтра
            const cutoffFreq = 300;      // начало подавления
            const transitionWidth = 200; // плавность перехода (200 Гц)
            
            for (let i = 0; i < bins; i++) {
                const freq = (i / bins) * nyquist;
                
                // Вычисляем коэффициент ослабления (0 = полное подавление, 1 = без изменений)
                let attenuation = 1.0;
                
                if (freq < cutoffFreq) {
                    // Ниже 300 Гц - сильное подавление
                    // Используем косинусную функцию для плавного перехода
                    const ratio = freq / cutoffFreq;
                    attenuation = ratio * ratio; // квадратичное ослабление для более агрессивного подавления низов
                } else if (freq < cutoffFreq + transitionWidth) {
                    // Переходная зона 300-500 Гц - плавное восстановление
                    const ratio = (freq - cutoffFreq) / transitionWidth;
                    attenuation = 0.5 * (1 - Math.cos(Math.PI * ratio)); // косинусная интерполяция
                }
                // Выше 500 Гц - без изменений (attenuation = 1.0)
                
                // Применяем ослабление
                filtered[i] = Math.round(spectrum[i] * attenuation);
            }
            
            return filtered;
        }

        // Дополнительное сглаживание для плавных линий (адаптивное окно + двойной проход)
        function smoothSpectrum(spectrum, baseWindowSize = 12) {
            if (!spectrum || spectrum.length === 0) return spectrum;
            let out = new Uint8Array(spectrum.length);
            
            // Первый проход: адаптивное окно
            for (let i = 0; i < spectrum.length; i++) {
                const t = i / spectrum.length;
                const adaptiveWindow = Math.round(baseWindowSize * (1 + t * 3)); // от 12 до 48
                const half = Math.floor(adaptiveWindow / 2);
                let sum = 0;
                let count = 0;
                for (let j = Math.max(0, i - half); j <= Math.min(spectrum.length - 1, i + half); j++) {
                    sum += spectrum[j];
                    count++;
                }
                out[i] = Math.round(sum / count);
            }
            
            // Второй проход: дополнительное сглаживание для ультра-плавности
            const out2 = new Uint8Array(spectrum.length);
            for (let i = 0; i < spectrum.length; i++) {
                const window = 6;
                const half = Math.floor(window / 2);
                let sum = 0;
                let count = 0;
                for (let j = Math.max(0, i - half); j <= Math.min(spectrum.length - 1, i + half); j++) {
                    sum += out[j];
                    count++;
                }
                out2[i] = Math.round(sum / count);
            }
            
            return out2;
        }

        // Вспомогательная: построить усреднённый по Forever спектр (0..255) из сумм мощностей
        function buildAveragedSpec(sumArr, frames, bins) {
            const out = new Uint8Array(bins || (sumArr ? sumArr.length : 0));
            if (!sumArr || !sumArr.length || !frames) return out;
            for (let i = 0; i < sumArr.length; i++) {
                const p = sumArr[i] / frames; // средняя мощность
                const n = Math.sqrt(Math.max(0, p)); // RMS
                out[i] = Math.max(0, Math.min(255, Math.round(n * 255)));
            }
            return out;
        }

        function drawFrequencyResponse(freqArray) {
            if (!freqCtx) return;
            const rect = freqCanvas.getBoundingClientRect();
            const width = rect.width;
            const height = rect.height;

            // Очистка фона
            freqCtx.fillStyle = '#ffffff';
            freqCtx.fillRect(0, 0, width, height);

            // Логарифмическая шкала частоты (100-10000 Гц)
            const bins = freqArray.length;
            const minF = 100;
            const maxF = 10000;
            const logMin = Math.log10(minF);
            const logMax = Math.log10(maxF);

            // Позиционируем статус посередине между 500 Гц и 1 кГц
            try {
                const fA = 500;
                const fB = 1000;
                const xA = ((Math.log10(fA) - logMin) / (logMax - logMin)) * width;
                const xB = ((Math.log10(fB) - logMin) / (logMax - logMin)) * width;
                const midX = (xA + xB) / 2;
                statusElement.style.left = `${midX}px`;
                statusElement.style.transform = 'translateX(-50%)';
                statusElement.style.top = '8px';
            } catch(e) {}

            // Сначала рисуем горизонтальные линии уровня для плавности восприятия
            freqCtx.strokeStyle = 'rgba(1,100,79,0.06)';
            freqCtx.lineWidth = 1;
            for (let i = 1; i <= 4; i++) {
                const y = (height / 5) * i;
                freqCtx.beginPath();
                freqCtx.moveTo(0, y);
                freqCtx.lineTo(width, y);
                freqCtx.stroke();
            }

            // Рисуем вертикальную сетку (более тонко и нежно)
            const ticks = [100, 200, 500, 1000, 2000, 5000, 10000];
            const tickPositions = [];
            freqCtx.strokeStyle = 'rgba(1,100,79,0.10)';
            freqCtx.lineWidth = 0.8;
            ticks.forEach(f => {
                if (f < minF || f > maxF) return;
                const x = ((Math.log10(f) - logMin) / (logMax - logMin)) * width;
                tickPositions.push({ x, f });
                // вертикальная линия сетки
                freqCtx.beginPath();
                freqCtx.moveTo(x, 0);
                freqCtx.lineTo(x, height);
                freqCtx.stroke();
            });

            // Вспомогательная функция: перевод логарифмической частоты в X
            function freqToX(f) {
                const logF = Math.log10(Math.max(minF, Math.min(maxF, f)));
                return ((logF - logMin) / (logMax - logMin)) * width;
            }

            // Вспомогательная функция: выборка и нормализация величины по частоте
            function getNormAtFreq(data, f) {
                const bin = Math.min(bins - 1, Math.max(0, Math.round((f / (sampleRate / 2)) * (bins - 1))));
                let v = data[bin] / 255;
                v = Math.pow(v, 0.85);
                const t = (Math.log10(f) - logMin) / (logMax - logMin);
                const hfGain = 0.85 + 0.3 * t;
                let vDraw = Math.min(1, v * hfGain);
                return Math.min(0.9, vDraw);
            }

            // Рисование плавной линии по лог-шкале частоты
            function drawSmoothLine(color, data) {
                const numPts = 160; // больше точек для плавности
                const topPad = 20;
                const usableH = height - 30;
                const tension = 0.3; // кривизна

                // Сбор опорных точек
                const pts = [];
                for (let i = 0; i < numPts; i++) {
                    const t = i / (numPts - 1);
                    const f = Math.pow(10, logMin + t * (logMax - logMin));
                    const x = freqToX(f);
                    const n = getNormAtFreq(data, f);
                    const y = height - (n * usableH) - topPad;
                    pts.push({ x, y });
                }

                // Сглаживание: скользящее среднее
                const win = 5;
                const smooth = pts.map((p, i) => {
                    let sx = 0, sy = 0, c = 0;
                    for (let k = -win; k <= win; k++) {
                        const j = Math.min(numPts - 1, Math.max(0, i + k));
                        sx += pts[j].x; sy += pts[j].y; c++;
                    }
                    return { x: sx / c, y: sy / c };
                });

                // Рисуем сглаженную линию (кубические кривые через промежуточные контрольные точки)
                freqCtx.strokeStyle = color;
                freqCtx.lineWidth = 3;
                freqCtx.lineJoin = 'round';
                freqCtx.lineCap = 'round';
                freqCtx.beginPath();
                freqCtx.moveTo(smooth[0].x, smooth[0].y);
                for (let i = 1; i < smooth.length; i++) {
                    const p0 = smooth[i - 1];
                    const p1 = smooth[i];
                    const cx = p0.x + (p1.x - p0.x) * tension;
                    const cy = p0.y + (p1.y - p0.y) * tension;
                    freqCtx.quadraticCurveTo(cx, cy, p1.x, p1.y);
                }
                freqCtx.stroke();
            }

            // Построение усреднённого по режиму Forever спектра текущей фазы во время измерения
            if (isMeasuring && analyser && freqArray && freqArray.length === bins) {
                if (measurementPhase === 'before') {
                    const liveAvg = buildAveragedSpec(foreverBeforeSpecSum, foreverBeforeCountFrames, bins);
                    drawSmoothLine('rgba(229,57,53,0.95)', liveAvg);
                } else {
                    const liveAvg = buildAveragedSpec(foreverAfterSpecSum, foreverAfterCountFrames, bins);
                    drawSmoothLine('rgba(1,100,79,0.95)', liveAvg);
                }
            }

            // В статике рисуем ДО под ПОСЛЕ, чтобы зелёная была сверху
            if (beforeSmoothed && beforeSmoothed.length === bins) {
                drawSmoothLine('rgba(229,57,53,0.9)', beforeSmoothed);
            }
            if (afterSmoothed && afterSmoothed.length === bins) {
                drawSmoothLine('rgba(1,100,79,0.95)', afterSmoothed);
            }

            // Теперь наносим риски и подписи поверх графиков
            freqCtx.fillStyle = '#6b8488';
            freqCtx.font = '12px Arial';
            tickPositions.forEach(tp => {
                const x = tp.x;
                // риска снизу
                freqCtx.strokeStyle = 'rgba(1,100,79,0.25)';
                freqCtx.beginPath();
                freqCtx.moveTo(x, height - 8);
                freqCtx.lineTo(x, height);
                freqCtx.stroke();
                // подпись
                const f = tp.f;
                const label = f >= 1000 ? `${(f/1000).toFixed(f===1000||f===2000||f===5000||f===10000?0:1)}k` : `${f}`;
                const textW = freqCtx.measureText(label).width;
                const textX = Math.min(Math.max(0, x - textW / 2), width - textW);
                freqCtx.fillText(label, textX, height - 10);
            });

            // Подсказки по ховеру отключены по требованию
        }

        // Интерактивность: ховер/тач
        if (freqCanvas) {
            window.addEventListener('resize', () => { 
                initFreqCanvas(); 
                // После изменения размера canvas перерисовываем застывшие графики
                if (!isMeasuring && (beforeSmoothed || afterSmoothed)) {
                    setTimeout(() => {
                        const bins = beforeSmoothed ? beforeSmoothed.length : (afterSmoothed ? afterSmoothed.length : 2048);
                        drawFrequencyResponse(new Uint8Array(bins));
                    }, 50);
                }
            });
            window.addEventListener('orientationchange', () => { 
                setTimeout(() => {
                    initFreqCanvas();
                    // После изменения ориентации перерисовываем застывшие графики
                    if (!isMeasuring && (beforeSmoothed || afterSmoothed)) {
                        const bins = beforeSmoothed ? beforeSmoothed.length : (afterSmoothed ? afterSmoothed.length : 2048);
                        drawFrequencyResponse(new Uint8Array(bins));
                    }
                }, 100); 
            });
            setTimeout(initFreqCanvas, 0);
        }
        
        // Включаем анимацию пульсации при первой загрузке
        toggleBtn.classList.add('pulse-attention');
    </script>
</body>
</html>